<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_background_main_4"
    android:orientation="vertical"
    android:padding="16dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:layout_marginHorizontal="12dp"


            >

            <ImageButton
                android:id="@+id/user_image_o"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/ic_character_robot"


                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_container"
            android:layout_alignBottom="@+id/image_container">

            <ImageView
                android:id="@+id/type_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bac_curve"
                android:backgroundTint="@color/white"


                />

            <ImageView
                android:id="@+id/indicator_user_1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_main_o"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/image_container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/image_container"
            android:gravity="center_horizontal"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:layout_marginHorizontal="12dp"


            >


            <ImageButton
                android:id="@+id/user_image_x"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/ic_character_man_2"


                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_container2"
            android:layout_alignBottom="@+id/image_container"

            >

            <ImageView
                android:id="@+id/type_image2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bac_curve"
                android:backgroundTint="@color/white"


                />

            <ImageView
                android:id="@+id/indicator_user_2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:src="@drawable/ic_main_x"


                />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_curve"
        android:backgroundTint="#85E289"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_X"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bac_curve"
                android:backgroundTint="@color/white"
                android:padding="6dp"
                android:src="@drawable/ic_main_x" />

            <EditText
                android:id="@+id/editText_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Player X Name"


                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_easy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bac_curve"
                android:backgroundTint="@color/white"
                android:text="Easy"
                android:textSize="18sp"
                android:textColor="@color/black"

                />

            <Button
                android:id="@+id/button_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bac_curve"
                android:backgroundTint="@color/white"
                android:text="Hard"
                android:textSize="18sp"
                android:textColor="@color/black"

                />
        </LinearLayout>

    </LinearLayout>




    <Button
        android:id="@+id/button_move_next_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bac_curve"
        android:backgroundTint="@color/white"
        android:text="Next"
        android:textSize="18sp"
        android:textColor="@color/black"

        />

</LinearLayout>