<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_main_2"
    android:orientation="vertical"
    tools:context=".MainFragment"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <ImageView
            android:id="@+id/btn_audio"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_audio_no"

            />


        <ImageButton
            android:id="@+id/btn_language"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/ic_language"


            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/btn_one_player"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-26dp"
            android:background="@drawable/bac_curve"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingVertical="18dp"


            >

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:contentDescription="Reset Game"
                android:src="@drawable/img_robot"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="@string/play_with_robot"
                android:textColor="@color/black"
                android:textSize="16sp"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_two_player"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/bac_curve"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingVertical="18dp"


            >

            <ImageView
                android:layout_width="62dp"

                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:contentDescription="Reset Game"
                android:src="@drawable/img_classic"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="@string/play_with_friend"
                android:textColor="@color/black"
                android:textSize="16sp"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_infinite"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/bac_curve"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:paddingVertical="18dp"

            >

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:contentDescription="Reset Game"
                android:src="@drawable/img_infinite"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="@string/play_infinite_move"
                android:textColor="@color/black"
                android:textSize="16sp"

                />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>